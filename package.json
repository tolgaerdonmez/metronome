{
  "name": "metronome",
  "productName": "Focus Metronome",
  "version": "1.0.0",
  "private": true,
  "main": "build/electron.js",
  "homepage": "./",
  "author": {
    "name": "Tolga Erdonmez",
    "email": "tolgaerdonmez@gmail.com"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "electron-is-dev": "^1.2.0",
    "howler": "^2.2.0",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-scripts": "3.4.1",
    "react-transition-group": "^4.4.1",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.3.0",
    "typescript": "~3.7.2"
  },
  "devDependencies": {
    "@types/howler": "^2.2.1",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^7.1.9",
    "@types/react-transition-group": "^4.4.0",
    "@types/redux-persist": "^4.3.1",
    "asar": "^3.0.3",
    "concurrently": "^5.2.0",
    "electron": "^9.1.1",
    "electron-builder": "^22.7.0",
    "electron-packager": "^14.2.1",
    "electron-reload": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "wait-on": "^4.0.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "ELECTRON_IS_DEV=1 concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && yarn dev:electron\"",
    "dev:electron": "ELECTRON_IS_DEV=1 electron .",
    "package-mac": "CSC_LINK=./build/all-certs.p12 electron-builder build --mac && bash build/resignAndPackage.sh",
    "package-linux": "electron-builder build --linux appImage -c.extraMetadata.main=build/electron/main.js",
    "package-win": "electron-builder build --win portable -c.extraMetadata.main=build/electron/main.js",
    "prepackage": "yarn build && cp -r electron/* build/ && cp -r macOS/* build/",
    "prepackage-linux": "yarn prepackage",
    "prepackage-mac": "yarn prepackage",
    "prepackage-win": "yarn prepackage"
  },
  "build": {
    "appId": "com.tolgaerdonmez.metronome",
    "buildVersion": "3",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "embedded.provisionprofile"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "mas"
      ],
      "provisioningProfile": "./embedded.provisionprofile",
      "icon": "assets/Icon.icns"
    },
    "mas": {
      "provisioningProfile": "./embedded.provisionprofile",
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist",
      "icon": "assets/Icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "asarUnpack": []
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
